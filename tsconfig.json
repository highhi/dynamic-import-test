{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "lib": ["ES2016", "ES2017", "ES2015", "dom"],
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
